{
    "name": "lucleroy/php-regex",
    "description": "PHP Regular Expressions Builder",
    "type": "library",
    "keywords": [
        "regular expression",
        "regex"
    ],
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Luc Leroy",
            "email": "lucleroy2001@gmail.com"
        }
    ],
    "homepage": "https://github.com/lucleroy/php-regex",
    "autoload": {
        "psr-4": {
            "LucLeroy\\Regex\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "^3.6",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "require": {
        "php": "^5.5 || ^7.0 || ^8.0"
    },
    "scripts": {
        "sniffer:php8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.0"
    }
}
